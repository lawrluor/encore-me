{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/auth/login",
      "destination": "/api/auth/login.js"
    },
    {
      "source": "/api/users",
      "destination": "/api/users/index.js"
    },
    {
      "source": "/api/users/:id",
      "destination": "/api/users/[id].js"
    },
    {
      "source": "/api/items",
      "destination": "/api/items/index.js"
    },
    {
      "source": "/api/items/:id",
      "destination": "/api/items/[id].js"
    },
    {
      "source": "/api/:path",
      "destination": "/api/:path.js"
    },
    {
      "source": "/",
      "destination": "/api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}